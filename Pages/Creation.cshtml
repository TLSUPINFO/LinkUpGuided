@page
@model CreationModel
@{
    ViewData["Title"] = "Home page";
}

<!-- MAIN (Center website) -->
<div class="main">
<h1>Content Creation</h1>
<hr>


<!-- Content Creation Part -->
    <form method="post" enctype="multipart/form-data" asp-page-handler="SubmitPublication">
    <table>
      <tbody>
        <tr>
          <th scope="row">Title</th>
          <td><input type="text" asp-for="Title" maxlength="25" required/></td>
        </tr>
        <tr>
          <th scope="row">Description</th>
          <td><input type="text" asp-for="Description" required/></td>
        </tr>
        <tr>
          <th scope="row">Content</th>
          <td><input type="file" accept=".png, .jpg, .bmp, .mp4" asp-for="Media" name="Media" required/></td>
        </tr>
        <tr>
            <th scope="row">Publish post</th>
            <td><input type="checkbox" asp-for="Access" name="Access"></td>
        </tr>
        <tr>
            <th scope="row">Submit</th>
            <td><button type="submit">Create</button></td>
        </tr>
      </tbody>
    </table>
</form>

<!-- END Content Creation -->
</div>

<!-- END MAIN -->
</div>

